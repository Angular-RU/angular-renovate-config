{
    "extends": ["schedule:nonOfficeHours"],
    "automerge": true,
    "rangeStrategy": "bump",
    "timezone": "Europe/Moscow",
    "separateMajorMinor": false,
    "separateMinorPatch": true,
    "semanticCommits": true,
    "semanticCommitType": "build",
    "packageFiles": ["package.json", "packages/**/package.json"],
    "major": { "automerge": false, "masterIssueApproval": true },
    "packageRules": [
        {
            "depTypeList": ["dependencies"],
            "groupName": "dependencies",
            "groupSlug": "dependencies",
            "commitMessagePrefix": "feat:",
            "commitMessageTopic": "only dependencies",
            "commitBody": "only dependencies"
        },
        {
            "depTypeList": ["devDependencies"],
            "groupName": "devDependencies",
            "groupSlug": "devDependencies",
            "commitMessagePrefix": "ci:",
            "commitMessageTopic": "only devDependencies",
            "commitBody": "only devDependencies"
        },
        {
            "packagePatterns": ["^@angular/"],
            "excludePackagePatterns": [
                "^@angular/cli$",
                "^@angular/cdk$",
                "^@angular/fire$",
                "^@angular/flex-layout$",
                "^@angular/material"
            ],
            "groupName": "angular-framework"
        },
        {
            "packagePatterns": ["^@angular-devkit/", "^@angular/cli$"],
            "groupName": "angular-cli"
        },
        {
            "packagePatterns": ["^@angular/cdk$", "^@angular/material"],
            "groupName": "angular-components"
        },
        {
            "packagePatterns": ["^@angular/fire$"],
            "groupName": "angular-fire"
        },
        {
            "packagePatterns": ["^@angular/flex-layout$"],
            "groupName": "angular-flex-layout"
        },
        {
            "packagePatterns": ["^@ngxs/*", "^@ngxs-labs/*"],
            "groupName": "ngxs"
        },
        {
            "packagePatterns": ["^@types/*"],
            "groupName": "typings"
        },
        {
            "packageNames": ["typescript"],
            "separateMinorPatch": true
        },
        {
            "packageNames": ["typescript"],
            "updateTypes": ["minor", "major"],
            "masterIssueApproval": true
        }
    ]
}
